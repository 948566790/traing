<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ucar.training.dao.UserMapper">
    <resultMap id="user" type="com.ucar.training.domain.User">
        <result property="roleId" column="role_id"/>
    </resultMap>
    <insert id="userReg">
        insert into users(uname, pwd, age, role_id, sex, tel, email, fav, sign)
        values (#{uname}, #{pwd}, #{age}, #{roleId}, #{sex}, #{tel}, #{email}, #{fav}, #{sign})
    </insert>
    <select id="userCheckPwd" resultMap="user">
        select *
        from users
        where uname = #{arg0}
          and pwd = #{arg1};
    </select>
    <select id="getUserInfo" resultMap="user">
        select *
        from users
        where uname = #{arg0}
    </select>
    <delete id="userDel">
        delete
        from users
        where uname = #{arg0}
    </delete>
    <update id="userChange" parameterType="com.ucar.training.domain.User">
        update users
        set role_id=#{roleId},
            age=#{age},
            sex=#{sex},
            tel=#{tel},
            email=#{email},
            fav=#{fav},
            sign=#{sign}
        where uname = #{uname}
    </update>
    <select id="getUsers" resultMap="user">
        select *
        from users
    </select>
</mapper>