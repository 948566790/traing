<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

  <welcome-file-list>
      <welcome-file>pages/user/login.jsp</welcome-file>
  </welcome-file-list>

  <filter>
      <filter-name>DirtyFilter</filter-name>
      <filter-class>com.ucar.training.filter.DirtyFilter</filter-class>
    <init-param>
        <param-name>dirtylist</param-name>
        <param-value>草,傻逼,你妈,智障,操,畜生</param-value>
    </init-param>
  </filter>

  <filter-mapping>
      <filter-name>DirtyFilter</filter-name>
      <url-pattern>/mg</url-pattern>
  </filter-mapping>

  <filter>
      <filter-name>Encoding</filter-name>
      <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
    <init-param>
        <param-name>encoding</param-name>
      <param-value>utf-8</param-value>
    </init-param>
  </filter>

  <filter-mapping>
      <filter-name>Encoding</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <listener>
    <listener-class>com.ucar.training.listener.SeesionListener</listener-class>
  </listener>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>


    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath:applicationContext.xml</param-value>
    </context-param>
    <servlet>
        <servlet-name>Disptcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>classpath:springMVC.xml</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Disptcher</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>


</web-app>